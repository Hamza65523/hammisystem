<!DOCTYPE html>
<html>
<head>
    <title>User Reset</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h1>User Reset </h1>
                <form action="" method="POST">

                <div class="form-group">
                    <label class="label" for="name">Name</label>
                    <input class="input" type="text" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label class="label" for="email">Email</label>
                    <% if (typeof email !== 'undefined') { %>
                        <input class="input" type="email"  value="<%= email %>" id="email" name="email" placeholder="Email" required>
                        <% } %>
                </div>
                <div class="form-group">
                    <label class="label" for="password">Password</label>
                    <input class="input" type="password" id="password" name="password" placeholder="Password" required>
                </div>
                <button type="submit">Submit</button>
            </form>

            <% if (typeof data !== 'undefined') { %>
            <p class="<%= data.status ? 'success' : 'error' %>"><%= data.message %></p>
            <% } %>
        </div>
    </div>
</body>
</html>
